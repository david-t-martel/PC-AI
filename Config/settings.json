{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "1.0.0",
  "framework": {
    "name": "PC-AI",
    "description": "Local LLM-powered PC diagnostics and optimization framework"
  },
  "modules": {
    "PC-AI.Hardware": {
      "enabled": true,
      "requiresAdmin": true
    },
    "PC-AI.Virtualization": {
      "enabled": true,
      "requiresAdmin": true
    },
    "PC-AI.Network": {
      "enabled": true,
      "requiresAdmin": true
    },
    "PC-AI.USB": {
      "enabled": true,
      "requiresAdmin": true
    },
    "PC-AI.Performance": {
      "enabled": true,
      "requiresAdmin": false
    },
    "PC-AI.Cleanup": {
      "enabled": true,
      "requiresAdmin": true
    },
    "PC-AI.LLM": {
      "enabled": true,
      "requiresAdmin": false
    }
  },
  "reporting": {
    "outputDirectory": "Reports",
    "format": "txt",
    "includeTimestamp": true,
    "maxReportsToKeep": 50
  },
  "logging": {
    "enabled": true,
    "level": "Info",
    "logPath": "Reports/pc-ai.log"
  },
  "safety": {
    "readOnlyByDefault": true,
    "requireConfirmation": true,
    "createBackups": true
  },
  "llm": {
    "activeProvider": "pcai-inference",
    "activeModel": "pcai-inference",
    "routerModel": "functiongemma-270m-it",
    "routerUrl": "http://127.0.0.1:8000",
    "temperature": 0.4,
    "timeoutSeconds": 180
  }
}
