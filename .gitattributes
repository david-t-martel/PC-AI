# Auto detect text files and perform LF normalization
* text=auto

# PowerShell files
*.ps1 text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.md text eol=crlf
*.txt text eol=crlf

# Configuration files
*.json text eol=crlf
*.yml text eol=crlf
*.yaml text eol=crlf
*.xml text eol=crlf
*.config text eol=crlf

# Git files
.gitattributes text eol=crlf
.gitignore text eol=crlf
.editorconfig text eol=crlf

# Windows batch files
*.cmd text eol=crlf
*.bat text eol=crlf

# Binary files
*.exe binary
*.dll binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.7z binary
*.tar binary
*.gz binary
